#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main(){
	float SB,AFP,IVA,SM,SN;
	cout<<"Ingrese el Salario en Bruto: ";
	cin>>SB;
	IVA=(0.13)*SB;
	AFP=(0.121)*SB;
	SM=4000;
	if (SB>=SM){
		SN=SB-(AFP+IVA);
		cout<<"El salario Neto es: "<<SN;}
	else{
		SN=SB-(AFP);
		cout<<"El Salario Neto es: "<<SN;}
	getch();
}
